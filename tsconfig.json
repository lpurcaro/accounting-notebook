{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "jsx": "react",
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "server",
    "client/src"
  ],
  "exclude": ["node_modules"]
}
